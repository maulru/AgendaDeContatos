@model Meus_Contatos.Models.RegistrarViewModel

@{
    ViewBag.Title = "Cadastro de Usuário";
}

<div class="text-center" style="margin-bottom: 150px;">
    <h1 class="display-4">Cadastro de Usuário</h1>
</div>
<p class="fs-5 mb-4">Preencha os dados necessários para realizar o cadastro:</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-10">
        <div class="form-group mb-3">
            <b>@Html.LabelFor(m => m.Username)</b>
            <b>@Html.TextBoxFor(m => m.Username, new { @class = "form-control", @required = "required" })</b>
        </div>

        <div class="form-group mb-3">
            <b>@Html.LabelFor(m => m.Password)</b>
            <b>@Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })</b>
        </div>

        <div class="form-group mb-3">
            <b>@Html.LabelFor(m => m.ConfirmPassword)</b>
            <b>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })</b>
        </div>

        <div class="form-group mb-3">
            <b>@Html.LabelFor(m => m.Email)</b>
            <b>@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })</b>
        </div>

        <div class="form-group mb-3">
            <b>@Html.LabelFor(m => m.DateOfBirth)</b>
            <b>@Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @required = "required" })</b>
        </div>
    </div>

    <div class="mt-2">
        <a href="@Url.Action("Login", "Conta")" class="btn btn-secondary">Voltar</a>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
}
